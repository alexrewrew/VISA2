@import "../../utilities/vars"
@import "../../utilities/mixins"

a
  text-decoration none
  transitions()
  &:hover
    text-decoration none
  &:focus
    text-decoration none
    outline none

.link-logo
  display block
  width 125px
  position relative
  left -20px
  img
    width 100%
  +mobile()
    width: 75px;
    height: 75px;
    left: -15px;
    top: 3px;

.link-text
  font-family: UA-brand, sans-serif
  font-size: 1rem
  line-height: 2.5;
  text-align: center;

.link-partners
  display block
  margin-bottom 117px
  svg
    g, rect, polygon
      fill $white
      transitions()
  span
    display flex
    color $white
    align-items center
    transitions()
    svg
      margin-left 35px

  h4
    font-size: $s24
    line-height: 1.54
    color $darkred
    height 111px
    display: flex;
    align-items: center;
    margin-bottom 28px

  .advantage-image
    svg
      position relative
      left -62px
      top 15px

  &:hover
    svg
      g, rect, polygon
        fill $darkred
      polygon
        stroke $darkred
    span
      color $darkred

  +mobile()
    margin-bottom 60px
    h4
      font-size 1rem
      line-height 1.5
      margin-bottom 10px
      height 75px
    .advantage
      padding-left 0
      flex-wrap wrap
      .advantage-image
        //margin-right 20px
        max-width 100%
        flex 1 1 100%
        height 72px
        svg
          left 0
          top 0
          //width 100%
          max-width 50px
          height auto
      .advantage-image
        flex 1 1 100%
        max-width 100%