@import "../../utilities/vars"
@import "../../utilities/mixins"

a
  text-decoration none
  transitions()
  &:hover
    text-decoration none
  &:focus
    text-decoration none
    outline none

.link-logo
  display block
  width 125px
  position relative
  left -20px
  img
    width 100%
  +mobile()
    width: 85px;
    height: 85px;
    left: -15px;
    top: 3px;

.link-text
  font-family: UA-brand, sans-serif
  font-size: 1rem
  line-height: 2.5;
  text-align: center;

