.choice
  position relative
  z-index 10
  transitions()
  height 350px
  img
    max-width 450px


  +mobile()
    position static
    height 150px
    margin-top 40px
    img
      width 100%



.choice1
    left -15px

.choice2
  left 25px
  top -25px

.choice.transform
  opacity .6


.choice1.transform
  transform translateX(-220px)
  +mobile()
    transform none

.choice2.transform
  transform translateX(220px)
  +mobile()
    transform none

.choice-description
  position absolute
  max-width 292px
  z-index 30
  top 30px

  opacity 0

  transitions()
  +portrait()
    display none
  +mobile()
    display none
  p
    color $white
    font-weight: 500;
    line-height: 1.75;
  img
    position absolute
    top 160px

.choice-description1
  right -292px
  img
    left -225px

.choice-description2
  left -194px
  img
    right -125px

.choice-description.active
  opacity 1


.button-choice1
  +mobile()
    display none

.button-choice1a
  display none
  +mobile()
    display block