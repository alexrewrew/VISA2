#fp-nav.right
  right: 109px

#fp-nav
  ul
    li
      &:first-child, &:last-child
        display none

      .fp-tooltip
        background $white
        color $darkred
        max-width 250px
        width 100%
        text-align center
        font-weight: 300;
        line-height: 44px
        height 44px
        top -16px
        overflow visible
        box-shadow: 0 7px 14px 0 rgba(0, 0, 0, 0.17);

        &:after
          triangle($white, right, 10px)
          right -10px
          top 12px
      .fp-tooltip.right
        right 36px
      &:hover
        .fp-tooltip
          width 250px


#fp-nav ul li
  width 18px
  height 18px
  padding 0
  margin 0
  margin-bottom 12px
  margin-top 12px

#fp-nav ul li a
  width 18px
  height 18px
  padding 0
  margin 0

#fp-nav ul li a span
  background $white
  border 4px solid $trans
  left auto
  right auto
  top auto
  bottom auto
  width 12px
  height 12px
  margin 3px

#fp-nav ul li a.active span
  border 4px solid $white
  background $trans
  left auto
  right auto
  top auto
  bottom auto
  width 18px
  height 18px
  margin 0

#fp-nav ul li:hover a span
  border 4px solid $white
  background $trans
  left auto
  right auto
  top auto
  bottom auto
  width 18px
  height 18px
  margin 0

#fp-nav ul li:hover a.active span
  border 4px solid $white
  background $trans
  left auto
  right auto
  top auto
  bottom auto
  width 18px
  height 18px
  margin 0