#fp-nav.right
  right: 109px
  opacity 0
  +tablet()
    right 30px
  +portrait()
    right 30px

#fp-nav.right.visible
  opacity 1

#fp-nav
  z-index: 99999;
  ul
    li

      width 18px
      height 18px
      padding 0
      margin 0
      margin-bottom 12px
      margin-top 12px

      &:first-child, &:last-child, &:nth-child(2), &:nth-child(12)
        display none

      .fp-tooltip
        background $white
        color $darkred
        max-width unset
        width 100%
        text-align center
        font-weight: 300;
        line-height: 44px
        height 44px
        top -16px
        overflow visible
        box-shadow: 0 7px 14px 0 rgba(0, 0, 0, 0.17);
        z-index 4000
        padding 0 15px
        &:after
          triangle($white, right, 10px)
          right -10px
          top 12px
      .fp-tooltip.right
        right 36px
      &:hover
        .fp-tooltip
          width auto



#fp-nav ul li a
  width 18px
  height 18px
  padding 0
  margin 0
  span
    background $white
    border 4px solid $trans
    left auto
    right auto
    top auto
    bottom auto
    width 12px
    height 12px
    margin 3px

#fp-nav ul li a.active span, #fp-nav ul li:hover a span, #fp-nav ul li:hover a.active span
  border 4px solid $white
  background $trans
  left auto
  right auto
  top auto
  bottom auto
  width 18px
  height 18px
  margin 0

.section.fp-section.fp-table
  .row
    opacity 0
    transitions()

.section.fp-section.fp-table.active
  .row
    opacity 1