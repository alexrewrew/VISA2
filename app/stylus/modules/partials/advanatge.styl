.advantage
  list-flex(row)
  +mobile()
    padding-left 60px
  &-image
    flex 1 1 97px
    max-width 97px
    +mobile()
      max-width 60px
      flex 1 1 60px
    img
      position relative
      left -65px
      top -9px
      +portrait()
        left: -25px

.advantage-mobile
  display none
  position relative
  width 320px
  margin 0 auto
  margin-top 50px
  &--phone
    width 320px
  &--screenshot
    position absolute
    width: 224px;
    top: 66px;
    left: 32px;
  +mobile()
    display block

.advantage-mobile--desktop
  left 0
  .advantage-mobile--screenshot
    width 300px
    left 11px
    top 11px

.advantage-heading-mobile
  display none
  padding-top 50px
  h3
    margin-bottom 0
    color $white
    text-align center
  +mobile()
    display flex