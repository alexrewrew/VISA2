.mask
  position fixed
  top 0
  left calc(50% - ((1010px / 2)))
  background red
  z-index 20000
  height 100%
  display flex
  justify-content center
  align-items center

  //z-index -100
  //visibility hidden

  transition 1s all ease
  transform translateY(-100vh)

  img
    position absolute
    top calc(50% - (622px / 2))
    left 0

  h3
    font-family: UA-brand;
    font-size: 2.375rem
    font-weight: bold;
    text-align: center;
    color: $white
    position absolute
    max-width 360px
    width 100%
    left calc(50% + 402px)
    text-align center
    bottom calc(50% + (605px / 2))

  .button
    position absolute
    width 262px
    //top calc(100% - 170px)
    left: calc(553px - 131px);

    top calc(50% + (465px / 2))

    //bottom 0

.mask.visible
  //z-index 2000
  //visibility visible
  transform none