.mask
  position fixed
  top 0
  left calc(50% - ((1010px / 2)))
  z-index 2000
  height 100%
  display flex
  justify-content center
  align-items center

  transition 1s all ease
  transform translateY(-150vh)

  +portrait()
    left: calc(50% - ((790px / 2)))
  +mobile()
    display none

  &-phone
    position absolute
    top calc(50% - (542px / 2))
    left 0


  h3
    font-family: UA-brand;
    font-size: 2.375rem
    font-weight: bold;
    text-align: center;
    color: $white
    position absolute
    max-width 360px
    width 100%
    left calc(50% + 402px)
    text-align center
    //top 8%

    bottom calc(50% + (400px / 2))

  .button
    position absolute
    width 262px
    left: calc(553px - 131px);

    top calc(50% + (505px / 2))
    &:hover
      span
        background $pink2
        color $white

  .screenshot
    position absolute
    top calc(50% - (395px / 2))
    left 36px
    opacity 0
    z-index 1
    transitions()

  .screenshot.visible
    opacity 1
    z-index 2

.mask.visible
  transform none



