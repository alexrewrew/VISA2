.mask
  position fixed
  top 0
  left calc(50% - ((1010px / 2)))
  z-index 2000
  height 100%
  display flex
  justify-content center
  align-items center

  transition 1s all ease
  transform translateY(-150vh)

  +portrait()
    left: calc(50% - ((790px / 2)))
  +mobile()
    display none

  &-phone
    position absolute
    top calc(50% - (512px / 2))
    left 0
    max-width 340px

  h3
    font-family: UA-brand;
    font-size: 2.375rem
    font-weight: bold;
    text-align: center;
    color: $white
    position absolute
    max-width 360px
    width 100%
    left calc(50% + 402px)
    text-align center

    bottom calc(50% + (340px / 2))

  .button
    position absolute
    width 262px
    left: calc(553px - 131px);

    top calc(50% + (485px / 2))
    &:hover
      span
        background $pink2
        color $white

  .screenshot
    position absolute
    top calc(50% - (373px / 2))
    left 34px
    opacity 0
    z-index 1
    transitions()
    max-width 237px

  .screenshot.visible
    opacity 1
    z-index 2

.mask.visible
  transform none

.mask2
  right calc(50% - ((1010px / 2)))
  left auto
  .mask-desktop
    position absolute
    top: calc(50% - (400px / 2));
    right: -26px;
    max-width 590px
    +tablet()
      right -56px
    +portrait()
      right -106px
  .screenshot
    top: calc(50% - (362px / 2));
    right: -7px;
    left auto
    max-width 550px
    +tablet()
      right -31px
    +portrait()
      right -81px
  h3
    left auto
    right: calc(50% + 610px);
  .button
    right: 814px
    top: calc(50% + (500px / 2));
    left auto
    +tablet()
      right: 710px;
    +portrait()
      right: 590px;
      top: calc(50% + (625px / 2));


